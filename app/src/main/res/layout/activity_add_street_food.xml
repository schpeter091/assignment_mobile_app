<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddStreetFoodActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/logo"
        />

    <EditText
        android:id="@+id/etStreetFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Street food name"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/etSteetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="street name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPostCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="postcode"
        android:inputType="textPersonName" />

    <RadioGroup
        android:id="@+id/rgFoodType"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbVeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Vegetarian"/>

        <RadioButton
            android:id="@+id/rbNonVeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non Vegetarian"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Add a photo:"
            android:textColor="#1D3133"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            />

        <ImageView
            android:id="@+id/picRestaurant"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_placeholder" />

    </LinearLayout>

    <Button
        android:id="@+id/button_addRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Add"

        />

</LinearLayout>